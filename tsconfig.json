{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./esm",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "cjs",
    "coverage",
    "esm",
    "node_modules",
    "test",
    "vitest.config.ts"
  ]
}
