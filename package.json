{
  "name": "gentkit",
  "version": "1.0.0",
  "description": "Build a set of open-source frameworks with minimal dependencies and clean design, supporting independent usage of each\ncomponent, file, or even code segment without coupling between them.",
  "keywords": [
    "node",
    "npm",
    "yarn",
    "lib",
    "commonjs",
    "module",
    "gentkit",
    "date",
    "time",
    "datetime"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitee.com/gentkit/gentkit-for-npm"
  },
  "license": "MIT",
  "author": "田隆 (Len)",
  "type": "module",
  "main": "./cjs/index.cjs",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./cjs/index.d.cts",
        "default": "./cjs/index.cjs"
      }
    }
  },
  "files": [
    "cjs/**",
    "esm/**",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node bin/silent-clean.js",
    "update:dependencies": "npm install",
    "prepublishOnly": "npm run clean && npm run update:dependencies && npm run build && npm run test",
    "build": "tsc -b tsconfig.json && tsc -b tsconfig.cjs.json && node bin/rename-cjs.js",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
